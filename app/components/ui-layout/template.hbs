<header class="header">
  <h1>Ride Share</h1>
</header>
<div class="outside">
  <img class="driver-img" src="/images/driver.png">
</div>
<footer class="footer">
  <div class="centered">
    {{#if riders}}
      <img class="round" onclick={{action "stop"}} src="/images/pause.png">
    {{else}}
      <img class="round" onclick={{action "start"}} src="/images/play.png">
    {{/if}}
  </div>
  <div class="lower"></div>
</footer>
{{#ui-map as |context|}}
  {{#each riders as |rider|}}
    {{ui-marker context=context rider=rider}}
  {{/each}}
{{/ui-map}}
